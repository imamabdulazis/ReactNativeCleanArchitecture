{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@data/*": [
        "src/features/data/*"
      ],
      "@domain/*": [
        "src/features/domain/*"
      ],
      "@di/*": [
        "src/features/di/*"
      ],
      "@presentation/*": [
        "src/features/presentation/*"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}